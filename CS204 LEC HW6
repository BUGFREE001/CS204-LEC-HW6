#3 


#include<stdio.h>
typedef struct student
{
char name[20];
int id;
int month;
int day;
} student;
int cmp(const void *p, const void *q)
{
student *a=(student *)p;
student *b=(student *)q;
return a->id - b->id;
}
int main()
{
int n,i,j;
printf("Enter number of students in this class:\n");
scanf("%d",&n);
printf("Enter student name(less than 10 char),student id and date of birth(month and date)\n");
student tmp[n];
for(i=0;i<n;i++)
scanf("%s%d%d%d",tmp[i].name,&tmp[i].id,&tmp[i].month,&tmp[i].day);
if(n==0){
return 0;
}
qsort((void*)tmp, n, sizeof(tmp[0]), cmp);
printf("\n\n");
for(i=1;i<=12;i++)
{
for(j=1;j<=31;j++)
{
int c=0;
for(int k=0;k<n;k++){
if(tmp[k].month==i&&tmp[k].day==j){
c++;
}
}
if(c){

printf("%d %d-",i,j);

for(int k=0;k<n;k++){
if(tmp[k].month==i&&tmp[k].day==j){
printf("%d ",tmp[k].id);
}

}

printf("\n");

}

}
}

}
























